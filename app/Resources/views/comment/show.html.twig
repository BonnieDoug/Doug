{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ comment.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ comment.body }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ comment.likes }}</td>
            </tr>
            <tr>
                <th>Dislikes</th>
                <td>{{ comment.dislikes }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_comment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('blog_comment_edit', { 'id': comment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
